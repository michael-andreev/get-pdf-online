@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html>
    <head>
        @RenderSection("head", required: false)
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="@Localizer["Absolutely free online PDF converter without any limits. There is also available free offline Windows Application."]" />
        <meta name="keywords" content="@Localizer["convert to PDF, Word to PDF, Excel to PDF, Powerpoint to PDF, Visio to PDF, JPG to PDF, JPEG to PDF, Image to PDF"]" />
        <meta name="author" content="andreyev.work">
        <title>@Localizer["GetPDF.online - Convert files to PDF online and free!"]</title>
        <link rel="shortcut icon" href="~/favicon.ico">
        <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
@if (!string.IsNullOrWhiteSpace(ViewBag.GaTrackingId))
{
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', '@ViewBag.GaTrackingId', 'auto');
        </script>
}
    </head>
    <body>
        @RenderBody()

        @RenderSection("scripts", required: false)
    </body>
</html>
